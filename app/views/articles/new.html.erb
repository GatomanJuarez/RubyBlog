<h1>Nuevo articulo</h1>

<%= form_for(@article) do |f| %>
        <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div class="field">
            <%= f.label :content %>
            <%= f.text_area :content %>
        </div>
        <div class="action">
            <%= f.submit %>
        </div>
<% end %>